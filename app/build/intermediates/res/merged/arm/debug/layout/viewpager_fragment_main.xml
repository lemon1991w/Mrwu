<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RadioGroup 
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">
        
        <RadioButton 
            android:id="@+id/main_rb0"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="@string/touzi"
            android:gravity="center"
            android:layout_weight="1"/>
        
        <RadioButton 
            android:id="@+id/main_rb1"
            android:padding="10dp"
            android:layout_width="0dp "
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="@string/yihuishou"
            android:gravity="center"
            android:layout_weight="1"/>
                
         <RadioButton 
            android:id="@+id/main_rb2"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="@string/mingxi"
            android:gravity="center"
            android:layout_weight="1"/>
        
    </RadioGroup>
    
    <LinearLayout 
        android:id="@+id/main_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
         
         <ImageView  
            android:id="@+id/img_bottom_line"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:contentDescription="@string/app_name"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:scaleType="matrix"
            android:background="@drawable/select_red_line"/> 
        
         <ImageView 
             android:id="@+id/img_bottom_line1"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="2dp"
             android:layout_gravity="center"
             android:contentDescription="@string/app_name"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:scaleType="matrix"/>
                 
         <ImageView 
             android:id="@+id/img_bottom_line2"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="2dp"
             android:contentDescription="@string/app_name"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:scaleType="matrix"/>
         
    </LinearLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
    </android.support.v4.view.ViewPager>
    
</LinearLayout>
