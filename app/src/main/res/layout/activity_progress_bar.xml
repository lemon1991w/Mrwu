<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:progress="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1f1f1f"
    android:padding="20dp">

    <com.progressbar.view.CBProgressBar
        android:id="@+id/my_progress"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        progress:orientation="circle"
        progress:percent_text_color="@color/percent_text_color"
        progress:percent_text_size="@dimen/percent_text_size" />


    <com.progressbar.view.CBProgressBar
        android:id="@+id/my_progress2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        progress:isHorizonStroke="true"
        progress:orientation="horizontal"
        progress:percent_text_color="@color/percent_text_color_2"
        progress:percent_text_size="@dimen/percent_text_size_large"
        progress:progressBarBgColor="@color/progressbar_bg_color_1"
        progress:progressColor="@color/progress_color_1"
        progress:rect_round="@dimen/horizontal_corner" />

    <com.progressbar.view.CBProgressBar
        android:id="@+id/my_progress3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        progress:orientation="sector"
        progress:percent_text_size="@dimen/percent_text_size" />

    <Button
        android:id="@+id/btn_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:background="@drawable/button_circular_bg"/>
</LinearLayout>